<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polos"
    tools:context=".List">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Tasya Mulfiana" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/tasya" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:textAlignment="center"
        android:text="Tasya adalah seorang mahasiswa yang menempuh pendidikan di universitas tadulako.lahir pada tanggal 11 agustus 2003 di palu.Hobinya yaitu menggambar dan juga menyanyi.Dan memiliki 3 bersaudara."/>
</RelativeLayout>