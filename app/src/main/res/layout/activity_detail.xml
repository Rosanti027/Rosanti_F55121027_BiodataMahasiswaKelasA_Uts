<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polos"
    tools:context=".dETAIL">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Rosanti" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/ros" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:textAlignment="center"
        android:text="Rosanti adalah seorang mahasiswa yang menempuh pendidikan di universitas tadulako.lahir pada tanggal 11 februari 2003 di pandanwangi. Hobinya yaitu menyanyi dan juga berolahraga. Dan memiliki 3 bersaudara."/>
</RelativeLayout>